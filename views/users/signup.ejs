<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class=" mt-3 mb-3 col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" nonvalidate>
            <div class="mb-3">
                <label for="Username" class="form-label">Username :</label>
                <input type="text" name="username" class="form-control" placeholder="Enter Username"
                    class="form-control" required="true">
                <div class="valid-feedback"> Look Good!</div>
            </div>  
            <div class="mb-3">
                <label for="email" class="form-label">E-mail :</label>
                <input type="text" name="email" class="form-control" placeholder="Enter Email"
                    class="form-control" required="true">
                <div class="valid-feedback"> Look Good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password :</label>
                <input type="password" name="password" class="form-control" placeholder="Enter password"
                    class="form-control" required="true">
                <div class="valid-feedback"> Look Good!</div>
            </div>
            <button class="btn btn-outline-dark">SignUp</button>
        </form>
    </div>
</div>
    